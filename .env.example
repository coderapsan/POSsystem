# MongoDB Connection String
# Get your connection string from MongoDB Atlas or use local MongoDB
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database?retryWrites=true&w=majority

# Staff Access PIN (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_STAFF_PIN=your_secure_pin

# Admin Panel Password
ADMIN_PASSWORD=your_admin_password

# Master Password (for sensitive operations like clearing menu)
MASTER_PASSWORD=your_master_password
NEXT_PUBLIC_MASTER_PASSWORD=your_master_password
